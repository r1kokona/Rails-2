<%= form_with model: department do |form| %>
    <div class="field">
      <%= form.label :department_id %>
      <%= form.text_field :department_id %>
      <% department.errors.full_messages_for(:department_id).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :department_name %>
      <%= form.text_field :department_name %>
      <% department.errors.full_messages_for(:department_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <%= form.submit %>
<% end %>