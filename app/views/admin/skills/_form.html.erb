<%= form_with model: skill, url: skill.persisted? ? admin_skill_path(skill) : admin_skills_path do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
      <% skill.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <%= form.submit %>
<% end %>